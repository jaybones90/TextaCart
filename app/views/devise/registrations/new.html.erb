<div class="signup-form">
  <h2>Sign Up</h2>
  <br>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name))  do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group">
    <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: "Email" %>
  </div>

  <div class="field form-group">
    <% if @minimum_password_length %>
    <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "Password - #{@minimum_password_length} characters minimum" %>
    <% end %>
  </div>

  <div class="field form-group">
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off", placeholder: "Confirm Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-outline-primary" %>
  </div>
  <% end %>
</div>
